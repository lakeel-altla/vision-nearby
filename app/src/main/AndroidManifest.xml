<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lakeel.profile.notification">

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Nearby API Key -->
    <meta-data
            android:name="com.google.android.nearby.messages.API_KEY"
            android:value="${NEARBY_MESSAGES_API_KEY}"/>

    <application
            android:name=".presentation.application.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <!-- Awareness API -->
        <meta-data
                android:name="com.google.android.awareness.API_KEY"
                android:value="${GOOGLE_AWARENESS_API_KEY}"/>

        <!-- Google Map API -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="${GOOGLE_MAPS_API_KEY}"/>

        <activity
                android:name=".presentation.view.activity.MainActivity"
                android:label="@string/app_name"
                android:launchMode="standard"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".presentation.view.activity.RecentlyUserUserActivity"
                android:parentActivityName=".presentation.view.activity.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".presentation.view.activity.MainActivity"/>
        </activity>

        <activity
                android:name=".presentation.view.activity.FavoritesUserActivity"
                android:parentActivityName=".presentation.view.activity.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".presentation.view.activity.MainActivity"/>
        </activity>

        <service android:name=".presentation.service.LocationService"/>
        <service android:name=".presentation.service.LINEService"/>
        <service android:name=".presentation.service.RecentlyService"/>

        <service
                android:enabled="true"
                android:exported="false"
                android:isolatedProcess="false"
                android:label="publishService"
                android:name=".presentation.service.PublishService"/>

        <receiver android:name=".presentation.receiver.NearbyReceiver"/>

    </application>

</manifest>